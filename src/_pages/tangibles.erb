---<%
{
	layout: :page,
	title: "Tangible work",
	description: "A collection of the work Rachael Kalicun does away from the keyboard, including cooking and DIY.",
	permalink: "/tangible-work/",
	paginate: {
		collection: :tangible_works,
		per_page: 10
	}
}
%>---

<div class="mx-auto my-0 p-[20px] pb-[24px]">
	<h2 class="mt-0 alt_font text-3xl">Tangible Work</h2>
	<% paginator.resources.each do |tangible| %>
		<div class="mb-10">
			<div class="post-date"><%= tangible.data.date.to_date.strftime("%B %d, %Y") %></div>
			<div class="mt-0 mb-0">
				<h3 class="post-title"><a href="<%= tangible.relative_url %>"><%= tangible.data.title %></a></h3>
				<p><%= tangible.data.summary.html_safe %></p>
			</div>
		</div>
	<% end %>
	<% if paginator.total_pages > 1 %>
		<div class="pagination flex justify-between">
			<% if paginator.previous_page %>
			<div>
				<a href="<%= paginator.previous_page_path %>">← Previous Page</a>
			</div>
			<% end %>
			<% if paginator.next_page %>
			<div>
				<a href="<%= paginator.next_page_path %>">Next Page →</a>
			</div>
			<% end %>
		</div>
	<% end %>
</div>
