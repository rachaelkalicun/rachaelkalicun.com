---<%
{
	layout: :page,
	title: "Tangible work",
	description: "A collection of the work Rachael Kalicun does away from the keyboard, including cooking and DIY.",
	permalink: "/tangible-work/",
	paginate: {
		collection: :tangible_works,
		per_page: 10
	}
}
%>---

<div class="mx-auto my-0 p-[20px] pb-[24px]">
	<h2 class="mt-0 alt_font text-3xl mb-4">Tangible Work</h2>
	
	<% paginator.resources.each_with_index do |tangible, index| %>
		<a href="<%= tangible.relative_url %>">
			<div href="<%= tangible.relative_url %>" class="flex flex-col min-[500px]:flex-row min-[500px]:mb-7">
				<img class="object-cover w-full h-40 min-[500px]:h-auto min-[500px]:w-48 " src="<%= tangible.data.featured_image %>" alt="">
				<div class="flex flex-col justify-between max-[499px]:pt-3 min-[500px]:p-4 leading-normal">
					<div class="post-date"><%= tangible.data.date.to_date.strftime("%B %d, %Y") %></div>
					<h5 class="mb-2 post-title">
						<%= tangible.data.title %>
					</h5>
					<p class="mb-0 font-normal text-black"><%= tangible.data.description.html_safe %></p>
				</div>
			</div>
		</a>
		<% unless index == paginator.resources.size - 1 %>
			<hr class="mt-4 min-[500px]:mt-6 mb-6">
		<% end %>
	<% end %>
	<% if paginator.total_pages > 1 %>
		<div class="pagination flex justify-between">
			<% if paginator.previous_page %>
			<div>
				<a href="<%= paginator.previous_page_path %>">← Previous Page</a>
			</div>
			<% end %>
			<% if paginator.next_page %>
			<div>
				<a href="<%= paginator.next_page_path %>">Next Page →</a>
			</div>
			<% end %>
		</div>
	<% end %>
</div>
