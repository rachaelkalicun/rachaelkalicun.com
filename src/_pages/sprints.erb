---<%
{
	layout: :page,
	title: "Sprints",
	description: "Managing myself through personal agile practices",
	permalink: "/sprints/"
}
%>---

<div class="mx-auto my-0 bg-white p-[20px] pb-[24px]">
	<h2 class="mt-0 alt_font text-3xl">Sprints</h2>
	<% collections.sprints.each do |sprint| %>
		<div class="mb-[16px]">
			<div class="post-date"><%= sprint.data.date.to_date.strftime("%B %d, %Y") %></div>
			<h3 class="post-title">
				<a href="<%= sprint.relative_url %>"><%= sprint.data.title %></a>
			</h3>
		</div>
	<% end %>
</div>
