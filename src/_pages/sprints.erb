---<%
{
	layout: :page,
	title: "Sprints",
	description: "Managing myself through personal agile practices",
	permalink: "/sprints/",
	paginate: {
		collection: :sprints,
		per_page: 10
	}
}
%>---

<div class="mx-auto my-0 p-[20px] pb-[24px]">
	<h2 class="mt-0 alt_font text-3xl">Sprints</h2>
	<% paginator.resources.each_with_index do |sprint, index| %>
		<div class="mb-[5px]">
			<h3 class="post-title">
				<% if index == 0 %>
					<span class="post-date">This week: </span>
				<% end %>
				<a href="<%= sprint.relative_url %>"><%= sprint.data.title %></a>
			</h3>
			<p><%= sprint.data.summary %></p>
		</div>
	<% end %>
	<% if paginator.total_pages > 1 %>
		<div class="pagination flex justify-between">
			<% if paginator.previous_page %>
			<div>
				<a href="<%= paginator.previous_page_path %>">← Previous Page</a>
			</div>
			<% end %>
			<% if paginator.next_page %>
			<div>
				<a href="<%= paginator.next_page_path %>">Next Page →</a>
			</div>
			<% end %>
		</div>
	<% end %>
</div>
